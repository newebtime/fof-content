<?xml version="1.0" encoding="utf-8"?>
<form
	tabbed="true"
>
	<fieldset name="general"
			  label="COM_FOFCONTENT_ARTICLES_FIELDSET_GENERAL"
			  class="tab-pane active row-fluid"
			  innerclass="span9"
	>
		<field name="title" type="Text" />
		<field name="fulltext" type="Editor" />
	</fieldset>
	<fieldset name="general_option"
			  class="span3 form-vertical"
			  innertab="general"
	>
		<field name="enabled" label="JSTATUS" type="Published" />
		<field name="catid" type="Category" extension="com_fofcontent" />
		<field name="featured" type="BooleanToggle" />
		<field name="access" type="AccessLevel" />
		<field name="language" type="Language" />
	</fieldset>
	<fieldset name="publishing"
			  label="COM_FOFCONTENT_ARTICLES_FIELDSET_PUBLISHING"
			  class="tab-pane"
			  innerclass="span6"
	>
		<field name="publish_up" type="Calendar" />
		<field name="publish_down" type="Calendar" />
		<field name="created_on" type="Calendar" />
		<field name="created_by" type="User" />
		<field name="created_by_alias" type="Text" />
		<field name="modified_on" type="Text" readonly="readonly" />
		<field name="modified_by" type="Text" readonly="readonly" />
		<field name="version" type="Text" readonly="readonly" />
		<field name="hits" type="Text" readonly="readonly" />
		<field name="fofcontent_content_id" type="Text" readonly="readonly" />
	</fieldset>
	<fieldset name="publishing_option"
			  class="span6"
			  innertab="publishing"
	>
		<field name="metadesc" type="TextArea" rows="4" />
		<field name="metakey" type="TextArea" rows="4" />
		<field name="xreference" type="Text" />
		<field name="metadata_robots" type="GenericList">
			<option>JGLOBAL_USE_GLOBAL</option>
			<option value="index, follow">JGLOBAL_INDEX_FOLLOW</option>
			<option value="noindex, follow">JGLOBAL_NOINDEX_FOLLOW</option>
			<option value="index, nofollow">JGLOBAL_INDEX_NOFOLLOW</option>
			<option value="noindex, nofollow">JGLOBAL_NOINDEX_NOFOLLOW</option>
		</field>
		<field name="metadata_author" type="Text" />
		<field name="metadata_rights" type="Text" />
		<field name="metadata_xreference" type="Text" />
	</fieldset>
</form>
